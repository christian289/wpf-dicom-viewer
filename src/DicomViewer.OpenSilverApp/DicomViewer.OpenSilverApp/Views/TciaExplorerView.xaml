<UserControl x:Class="DicomViewer.OpenSilverApp.Views.TciaExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#1E1E1E">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ===== 헤더 / Header ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="TCIA Explorer"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock Text="The Cancer Imaging Archive - Browse and download public DICOM datasets"
                           Foreground="#888888"
                           FontSize="12"
                           Margin="0,4,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Padding="12,6"
                        Margin="0,0,8,0" />
                <Button Content="Test Connection"
                        Command="{Binding TestConnectionCommand}"
                        Padding="12,6" />
            </StackPanel>
        </Grid>

        <!-- ===== 검색 필터 / Search filter ===== -->
        <Border Grid.Row="1"
                Background="#252526"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,16">
            <TextBox Text="{Binding SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#1E1E1E"
                     Foreground="White"
                     BorderBrush="#333333"
                     Padding="8" />
        </Border>

        <!-- ===== 메인 콘텐츠 영역 / Main content area ===== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!-- Collections 패널 / Collections panel -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="4" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Collections"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Collections.Count, StringFormat=({0})}"
                                       Foreground="#888888"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Collections}"
                             SelectedItem="{Binding SelectedCollection, Mode=TwoWay}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Collection}"
                                           Foreground="White"
                                           Margin="8,6" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Patients 패널 / Patients panel -->
            <Border Grid.Column="1" Background="#252526" CornerRadius="4" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Patients"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Patients.Count, StringFormat=({0})}"
                                       Foreground="#888888"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Patients}"
                             SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,6">
                                    <TextBlock Text="{Binding PatientId}"
                                               Foreground="White"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding PatientName}"
                                               Foreground="#888888"
                                               FontSize="11"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Studies 패널 / Studies panel -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="4" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Studies"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding Studies.Count, StringFormat=({0})}"
                                       Foreground="#888888"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Studies}"
                             SelectedItem="{Binding SelectedStudy, Mode=TwoWay}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8,6">
                                    <TextBlock Text="{Binding StudyDescription}"
                                               Foreground="White" />
                                    <TextBlock Text="{Binding StudyDate}"
                                               Foreground="#888888"
                                               FontSize="11"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Series 패널 / Series panel -->
            <Border Grid.Column="3" Background="#252526" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D30" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Series"
                                       FontWeight="SemiBold"
                                       Foreground="White" />
                            <TextBlock Text="{Binding SeriesList.Count, StringFormat=({0})}"
                                       Foreground="#888888"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding SeriesList}"
                             SelectedItem="{Binding SelectedSeries, Mode=TwoWay}"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Modality 배지 / Modality badge -->
                                    <Border Grid.Column="0"
                                            Background="#0078D4"
                                            CornerRadius="4"
                                            Padding="6,3"
                                            VerticalAlignment="Top"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Modality}"
                                                   Foreground="White"
                                                   FontSize="10"
                                                   FontWeight="Bold" />
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding SeriesDescription}"
                                                   Foreground="White" />
                                        <TextBlock Foreground="#888888"
                                                   FontSize="11"
                                                   Margin="0,4,0,0">
                                            <Run Text="{Binding ImageCount, Mode=OneWay}" />
                                            <Run Text=" images" />
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 다운로드 버튼 / Download button -->
                    <Border Grid.Row="2" Background="#2D2D30" Padding="12">
                        <Grid>
                            <Button Content="Download &amp; Open"
                                    Command="{Binding DownloadAndOpenSeriesCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="12,8"
                                    Visibility="{Binding IsDownloading, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                            <!-- 다운로드 진행률 / Download progress -->
                            <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Downloading..."
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8" />
                                <ProgressBar Value="{Binding DownloadProgress}"
                                             Maximum="100"
                                             Height="4"
                                             Foreground="#0078D4"
                                             Background="#333333" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== 상태 바 / Status bar ===== -->
        <Border Grid.Row="3" Background="#252526" CornerRadius="4" Padding="12" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 로딩 인디케이터 / Loading indicator -->
                <Border Grid.Column="0"
                        Width="20" Height="20"
                        CornerRadius="10"
                        Background="#0078D4"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Margin="0,0,12,0" />

                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="#AAAAAA"
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
