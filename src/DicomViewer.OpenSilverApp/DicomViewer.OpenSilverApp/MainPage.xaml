<Page x:Class="DicomViewer.OpenSilverApp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:DicomViewer.OpenSilverUI.Controls;assembly=DicomViewer.OpenSilverUI"
      mc:Ignorable="d"
      Background="#1E1E1E"
      Foreground="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="DICOM Viewer (OpenSilver)"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Test Connection"
                            Command="{Binding TestConnectionCommand}"
                            Margin="4,0"
                            Padding="12,6"/>
                    <Button Content="Load Collections"
                            Command="{Binding LoadCollectionsCommand}"
                            Margin="4,0"
                            Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - TCIA Explorer -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <!-- Collections -->
                        <TextBlock Text="Collections" FontWeight="Bold" Margin="0,0,0,4"/>
                        <ListBox ItemsSource="{Binding Collections}"
                                 SelectedItem="{Binding SelectedCollection, Mode=TwoWay}"
                                 Height="120"
                                 Background="#1E1E1E"
                                 Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Collection}" Foreground="White"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Patients -->
                        <TextBlock Text="Patients" FontWeight="Bold" Margin="0,12,0,4"/>
                        <ListBox ItemsSource="{Binding Patients}"
                                 SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                                 Height="120"
                                 Background="#1E1E1E"
                                 Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PatientId}" Foreground="White"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Studies -->
                        <TextBlock Text="Studies" FontWeight="Bold" Margin="0,12,0,4"/>
                        <ListBox ItemsSource="{Binding Studies}"
                                 SelectedItem="{Binding SelectedStudy, Mode=TwoWay}"
                                 Height="120"
                                 Background="#1E1E1E"
                                 Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding StudyDescription}" Foreground="White"/>
                                        <TextBlock Text="{Binding StudyDate}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Series -->
                        <TextBlock Text="Series" FontWeight="Bold" Margin="0,12,0,4"/>
                        <ListBox ItemsSource="{Binding SeriesList}"
                                 SelectedItem="{Binding SelectedSeries, Mode=TwoWay}"
                                 Height="150"
                                 Background="#1E1E1E"
                                 Foreground="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Foreground="White">
                                            <Run Text="{Binding Modality}"/>
                                            <Run Text=" - "/>
                                            <Run Text="{Binding ImageCount}"/>
                                            <Run Text=" images"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding SeriesDescription}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Download Button -->
                        <Button Content="Download Selected Series"
                                Command="{Binding DownloadSeriesCommand}"
                                Margin="0,12,0,0"
                                Padding="12,8"
                                HorizontalAlignment="Stretch"/>

                        <!-- Download Progress -->
                        <ProgressBar Value="{Binding DownloadProgress}"
                                     Maximum="100"
                                     Height="4"
                                     Margin="0,8,0,0"
                                     Visibility="{Binding IsLoading}"/>
                        <TextBlock Text="{Binding DownloadStatus}"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Image Viewer -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="8">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Reset" Command="{Binding ResetViewCommand}" Margin="4,0" Padding="8,4"/>
                        <Button Content="Rotate Left" Command="{Binding RotateLeftCommand}" Margin="4,0" Padding="8,4"/>
                        <Button Content="Rotate Right" Command="{Binding RotateRightCommand}" Margin="4,0" Padding="8,4"/>

                        <TextBlock Text="W/L:" VerticalAlignment="Center" Margin="16,0,4,0"/>
                        <TextBlock Text="{Binding WindowWidth, StringFormat=N0}" VerticalAlignment="Center" Width="40"/>
                        <TextBlock Text="/" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding WindowCenter, StringFormat=N0}" VerticalAlignment="Center" Width="40"/>

                        <TextBlock Text="Zoom:" VerticalAlignment="Center" Margin="16,0,4,0"/>
                        <TextBlock Text="{Binding ZoomFactor, StringFormat=P0}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Image Display Area -->
                <Border Grid.Row="1" Background="Black">
                    <Grid>
                        <TextBlock Text="Select a series and download to view DICOM images"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="Gray"
                                   FontSize="14"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="8,4">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
                <TextBlock Text="OpenSilver DICOM Viewer"
                           HorizontalAlignment="Right"
                           Foreground="White"
                           FontSize="12"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading..."
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
