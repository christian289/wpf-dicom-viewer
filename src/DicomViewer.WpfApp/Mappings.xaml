<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:DicomViewer.ViewModels;assembly=DicomViewer.ViewModels"
                    xmlns:views="clr-namespace:DicomViewer.WpfApp.Views">

    <!-- ViewModel과 View를 자동으로 매핑하는 DataTemplate 정의 -->
    <!-- DataTemplate definitions for automatic ViewModel-View mapping -->

    <DataTemplate DataType="{x:Type viewmodels:StudyListViewModel}">
        <views:StudyListView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:ViewerViewModel}">
        <views:ViewerView />
    </DataTemplate>

</ResourceDictionary>
