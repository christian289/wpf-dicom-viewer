<UserControl x:Class="DicomViewer.WpfApp.Views.TciaExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:DicomViewer.ViewModels;assembly=DicomViewer.ViewModels"
             xmlns:controls="clr-namespace:DicomViewer.UI.Controls;assembly=DicomViewer.UI"
             mc:Ignorable="d"
             Background="{StaticResource BackgroundBrush}"
             d:DataContext="{d:DesignInstance Type=viewmodels:TciaExplorerViewModel}"
             Loaded="UserControl_Loaded">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ===== 헤더 / Header ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE774;"
                               FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                               FontSize="28"
                               Foreground="{StaticResource PrimaryBrush}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="TCIA Explorer"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource ForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0" />
                </StackPanel>
                <TextBlock Text="The Cancer Imaging Archive - Browse and download public DICOM datasets"
                           Foreground="{StaticResource ForegroundSubtleBrush}"
                           FontSize="12"
                           Margin="40,4,0,0" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <controls:IconButton Icon="&#xE72C;"
                                     Text="Refresh"
                                     ShowText="True"
                                     Orientation="Horizontal"
                                     Command="{Binding RefreshCommand}"
                                     Margin="0,0,8,0" />
                <controls:IconButton Icon="&#xE774;"
                                     Text="Test Connection"
                                     ShowText="True"
                                     Orientation="Horizontal"
                                     Command="{Binding TestConnectionCommand}"
                                     Margin="0,0,8,0" />

                <!-- 캐시 관리 영역 / Cache management area -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="4"
                        Padding="8,4"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE7B8;"
                                   FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                   FontSize="14"
                                   Foreground="{StaticResource ForegroundSubtleBrush}"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Cache:"
                                   Foreground="{StaticResource ForegroundSubtleBrush}"
                                   VerticalAlignment="Center"
                                   Margin="6,0,4,0"
                                   FontSize="12" />
                        <TextBlock Text="{Binding CacheSize}"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   MinWidth="60" />

                        <controls:IconButton Icon="&#xE838;"
                                             Text="Open"
                                             ShowText="False"
                                             ToolTip="Open cache folder / 캐시 폴더 열기"
                                             Command="{Binding OpenCacheFolderCommand}"
                                             IconSize="14"
                                             Margin="8,0,0,0" />
                        <controls:IconButton Icon="&#xE74D;"
                                             Text="Clear"
                                             ShowText="False"
                                             ToolTip="Clear cache / 캐시 삭제"
                                             Command="{Binding ClearCacheCommand}"
                                             IconSize="14"
                                             Margin="4,0,0,0" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- ===== 필터 영역 / Filter area ===== -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource DarkTextBoxStyle}"
                         VerticalAlignment="Center">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding LoadCollectionsCommand}" />
                    </TextBox.InputBindings>
                </TextBox>

                <TextBlock Text="&#xE721;"
                           FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="{StaticResource ForegroundSubtleBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           Grid.Column="0"
                           HorizontalAlignment="Right"
                           IsHitTestVisible="False" />
            </Grid>
        </Border>

        <!-- ===== 메인 콘텐츠 영역 / Main content area ===== -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Collections 패널 / Collections panel -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceHoverBrush}"
                            CornerRadius="8,8,0,0" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8B7;"
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Collections"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                            <TextBlock Text="{Binding Collections.Count, StringFormat=({0})}"
                                       Foreground="{StaticResource ForegroundSubtleBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Collections}"
                             SelectedItem="{Binding SelectedCollection}"
                             Style="{StaticResource DarkListBoxStyle}"
                             ItemContainerStyle="{StaticResource DarkListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Collection}"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           TextTrimming="CharacterEllipsis" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Patients 패널 / Patients panel -->
            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceHoverBrush}"
                            CornerRadius="8,8,0,0" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE77B;"
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Patients"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                            <TextBlock Text="{Binding Patients.Count, StringFormat=({0})}"
                                       Foreground="{StaticResource ForegroundSubtleBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Patients}"
                             SelectedItem="{Binding SelectedPatient}"
                             Style="{StaticResource DarkListBoxStyle}"
                             ItemContainerStyle="{StaticResource DarkListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding PatientId}"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding PatientName}"
                                               Foreground="{StaticResource ForegroundSubtleBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Studies 패널 / Studies panel -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceHoverBrush}"
                            CornerRadius="8,8,0,0" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;"
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Studies"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                            <TextBlock Text="{Binding Studies.Count, StringFormat=({0})}"
                                       Foreground="{StaticResource ForegroundSubtleBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Studies}"
                             SelectedItem="{Binding SelectedStudy}"
                             Style="{StaticResource DarkListBoxStyle}"
                             ItemContainerStyle="{StaticResource DarkListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding StudyDescription}"
                                               Foreground="{StaticResource ForegroundBrush}"
                                               TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding StudyDate}"
                                               Foreground="{StaticResource ForegroundSubtleBrush}"
                                               FontSize="11"
                                               Margin="0,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Series 패널 / Series panel -->
            <Border Grid.Column="3" Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceHoverBrush}"
                            CornerRadius="8,8,0,0" Padding="12">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xEB9F;"
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                       FontSize="14"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Text="Series"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource ForegroundBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                            <TextBlock Text="{Binding SeriesList.Count, StringFormat=({0})}"
                                       Foreground="{StaticResource ForegroundSubtleBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding SeriesList}"
                             SelectedItem="{Binding SelectedSeries}"
                             Style="{StaticResource DarkListBoxStyle}"
                             ItemContainerStyle="{StaticResource DarkListBoxItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Modality 배지 / Modality badge -->
                                    <Border Grid.Column="0"
                                            Background="{StaticResource PrimaryBrush}"
                                            CornerRadius="4"
                                            Padding="6,3"
                                            VerticalAlignment="Top"
                                            Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Modality}"
                                                   Foreground="White"
                                                   FontSize="10"
                                                   FontWeight="Bold" />
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding SeriesDescription}"
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis" />
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Foreground="{StaticResource ForegroundSubtleBrush}"
                                                       FontSize="11">
                                                <Run Text="{Binding ImageCount, Mode=OneWay}" />
                                                <Run Text=" images" />
                                            </TextBlock>
                                            <TextBlock Foreground="{StaticResource ForegroundSubtleBrush}"
                                                       FontSize="11"
                                                       Margin="12,0,0,0">
                                                <Run Text="{Binding BodyPartExamined}" />
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- 다운로드 버튼 / Download button -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceHoverBrush}"
                            CornerRadius="0,0,8,8" Padding="12">
                        <Grid>
                            <controls:IconButton Icon="&#xE896;"
                                                 Text="Download &amp; Open"
                                                 ShowText="True"
                                                 Orientation="Horizontal"
                                                 IconSize="18"
                                                 Command="{Binding DownloadAndOpenSeriesCommand}"
                                                 HorizontalAlignment="Stretch"
                                                 Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}" />

                            <!-- 다운로드 진행률 / Download progress -->
                            <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Downloading..."
                                           Foreground="{StaticResource ForegroundBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8" />
                                <ProgressBar Value="{Binding DownloadProgress}"
                                             Maximum="100"
                                             Height="4"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Background="{StaticResource SurfaceBrush}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== 상태 바 / Status bar ===== -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}"
                CornerRadius="8" Padding="12" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <controls:LoadingIndicator Grid.Column="0"
                                           IsActive="{Binding IsLoading}"
                                           SpinnerSize="20"
                                           Margin="0,0,12,0" />

                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="{StaticResource ForegroundSecondaryBrush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
