<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DicomViewer.UI.Controls">

    <!-- BoolToVisibilityConverter for ShowText -->
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <Style TargetType="{x:Type controls:IconToggleButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#CCCCCC" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="Segoe Fluent Icons, Segoe MDL2 Assets" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="HoverBackground" Value="#3E3E42" />
        <Setter Property="CheckedBackground" Value="#0078D4" />
        <Setter Property="CheckedForeground" Value="#FFFFFF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:IconToggleButton}">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}"
                            RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                        </Border.RenderTransform>
                        <StackPanel Orientation="{TemplateBinding Orientation}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <!-- 아이콘 / Icon -->
                            <TextBlock x:Name="PART_Icon"
                                       Text="{TemplateBinding Icon}"
                                       FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets"
                                       FontSize="{TemplateBinding IconSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            <!-- 텍스트 / Text -->
                            <TextBlock x:Name="PART_Text"
                                       Text="{TemplateBinding Text}"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Foreground="{TemplateBinding Foreground}"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{TemplateBinding ShowText, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover 상태 (Unchecked) / Hover state (Unchecked) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsChecked" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1.05" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1.05" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="1" Duration="0:0:0.1" />
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="1" Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{Binding HoverBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                        </MultiTrigger>
                        <!-- Checked 상태 / Checked state -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{Binding CheckedBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="PART_Icon" Property="Foreground"
                                    Value="{Binding CheckedForeground, RelativeSource={RelativeSource TemplatedParent}}" />
                            <Setter TargetName="PART_Text" Property="Foreground"
                                    Value="{Binding CheckedForeground, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                        <!-- Pressed 상태 / Pressed state -->
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.95" Duration="0:0:0.05" />
                                        <DoubleAnimation Storyboard.TargetName="ScaleTransform"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.95" Duration="0:0:0.05" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <!-- Disabled 상태 / Disabled state -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4" />
                        </Trigger>
                        <!-- Horizontal 방향일 때 / Horizontal orientation -->
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter TargetName="PART_Text" Property="Margin" Value="6,0,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
