<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DicomViewer.UI.Controls">

    <!-- HistogramViewer: FrameworkElement 기반으로 OnRender에서 직접 렌더링 -->
    <!-- HistogramViewer: FrameworkElement-based, renders directly in OnRender -->
    <Style TargetType="{x:Type controls:HistogramViewer}">
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="MinHeight" Value="100" />
        <Setter Property="MaxHeight" Value="200" />
    </Style>

</ResourceDictionary>
