<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:DicomViewer.UI.Controls">

    <!-- RulerOverlay: FrameworkElement 기반으로 OnRender에서 직접 렌더링 -->
    <!-- RulerOverlay: FrameworkElement-based, renders directly in OnRender -->
    <Style TargetType="{x:Type controls:RulerOverlay}">
        <Setter Property="IsHitTestVisible" Value="True" />
        <Setter Property="Cursor" Value="Cross" />
    </Style>

</ResourceDictionary>
