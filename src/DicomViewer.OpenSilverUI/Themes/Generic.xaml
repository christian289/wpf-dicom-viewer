<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DicomViewer.OpenSilverUI.Controls">

    <!-- IconButton Style -->
    <Style TargetType="controls:IconButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:IconButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Icon}"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="{TemplateBinding IconSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Text}"
                                       FontFamily="Segoe UI"
                                       FontSize="10"
                                       Foreground="{TemplateBinding Foreground}"
                                       Visibility="{TemplateBinding ShowText}"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- IconToggleButton Style -->
    <Style TargetType="controls:IconToggleButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:IconToggleButton">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <TextBlock x:Name="PART_Icon"
                                   Text="{TemplateBinding Icon}"
                                   FontFamily="Segoe Fluent Icons"
                                   FontSize="{TemplateBinding IconSize}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LoadingIndicator Style -->
    <Style TargetType="controls:LoadingIndicator">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:LoadingIndicator">
                    <Border Background="{TemplateBinding Background}"
                            Visibility="{TemplateBinding IsLoading}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="&#xE117;"
                                       FontFamily="Segoe Fluent Icons"
                                       FontSize="{TemplateBinding IndicatorSize}"
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{TemplateBinding Message}"
                                       FontFamily="Segoe UI"
                                       FontSize="14"
                                       Foreground="{TemplateBinding Foreground}"
                                       Margin="0,8,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DicomImageViewer Style -->
    <Style TargetType="controls:DicomImageViewer">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:DicomImageViewer">
                    <Border Background="{TemplateBinding Background}"
                            ClipToBounds="True">
                        <Image x:Name="PART_Image"
                               Source="{TemplateBinding ImageSource}"
                               Stretch="None"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- HistogramViewer Style -->
    <Style TargetType="controls:HistogramViewer">
        <Setter Property="Background" Value="#CC1E1E1E"/>
        <Setter Property="MinHeight" Value="60"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:HistogramViewer">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            CornerRadius="4">
                        <Canvas x:Name="PART_Canvas" ClipToBounds="True">
                            <Polygon x:Name="PART_HistogramPolygon"
                                     Fill="{TemplateBinding HistogramBrush}"/>
                            <Rectangle x:Name="PART_WindowLevelRect"
                                       Fill="{TemplateBinding WindowLevelBrush}"
                                       Visibility="Collapsed"/>
                        </Canvas>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RulerOverlay Style -->
    <Style TargetType="controls:RulerOverlay">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:RulerOverlay">
                    <Canvas x:Name="PART_Canvas" Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- SliceNavigator Style -->
    <Style TargetType="controls:SliceNavigator">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SliceNavigator">
                    <Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center">
                                <Run Text="Slice: "/>
                                <Run Text="{Binding DisplayNumber, RelativeSource={RelativeSource TemplatedParent}}"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding TotalCount, RelativeSource={RelativeSource TemplatedParent}}"/>
                            </TextBlock>

                            <Slider Grid.Column="1"
                                    Minimum="0"
                                    Maximum="{Binding MaxIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                    Value="{Binding CurrentIndex, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                    Margin="16,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ModernSlider Style -->
    <Style TargetType="controls:ModernSlider">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ModernSlider">
                    <Grid>
                        <Border Height="{TemplateBinding TrackHeight}"
                                Background="{TemplateBinding TrackBackground}"
                                CornerRadius="2"
                                VerticalAlignment="Center"/>
                        <Slider Minimum="{TemplateBinding Minimum}"
                                Maximum="{TemplateBinding Maximum}"
                                Value="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
